<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@color/colorPrimaryBg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/itemUserLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_item_user"
        android:layout_marginHorizontal="@dimen/margin_item_user_hor"
        android:layout_marginTop="@dimen/margin_item_user_top"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="@dimen/corner_item_user_avatar">

            <ImageView
                android:id="@+id/itemUserAvatarImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/user_avatar_image" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/itemUserNameTextView"
            android:layout_height="30dp"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/itemUserNoteImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="30dp"
            android:visibility="visible" />
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>